package org.mcdynasty.dynastywars;
 
import org.bukkit.Bukkit;
import org.bukkit.ChatColor;
import org.bukkit.Material;
import org.bukkit.Sound;
import org.bukkit.block.Block;
import org.bukkit.entity.Player;
import org.bukkit.event.EventHandler;
import org.bukkit.event.Listener;
import org.bukkit.event.block.Action;
import org.bukkit.event.player.PlayerInteractEvent;
 
public class LapisRain implements Listener {
 
    @EventHandler
    public void onPlayerInteract(PlayerInteractEvent e) {
	Player p = e.getPlayer();
	Block b = e.getClickedBlock();
	Material m = b.getType();
	Action a = e.getAction();
	if(a == Action.RIGHT_CLICK_BLOCK) {
	    if(m == Material.LAPIS_BLOCK) {
		p.getWorld().setStorm(true);
		Bukkit.broadcastMessage(ChatColor.BLUE + "Event> " + ChatColor.YELLOW + p.getName() + ChatColor.GRAY + " activated Lapis Rain");
		for(Player player : Bukkit.getOnlinePlayers()) {
		    player.getWorld().playSound(player.getLocation(), Sound.WITHER_SPAWN, 5, 1);
		}
	    }
	}
    }
}
